<main>
<!-- Hero Section -->
<%- include('hero') -%>

<!-- Pets Section -->
<section id="pets-grid" class="pets-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Pets para Adoção</h2>
            <p class="section-subtitle">Encontre o companheiro ideal para sua família</p>
            <div class="section-divider"></div>
        </div>
        <div class="pets-grid">
            <div class="pet-card" data-pet="rex">
                <div class="pet-image-container">
                    <div class="pet-slider">
                        <img src="/img/Zeus-cachorro_10.jpeg" alt="Rex 1" class="pet-slide active" loading="lazy">
                        <img src="/img/exemplo1.jpeg" alt="Rex 2" class="pet-slide" loading="lazy">
                        <img src="/img/principal1.jpeg" alt="Rex 3" class="pet-slide" loading="lazy">
                    </div>
                    <div class="slider-controls">
                        <button class="slider-btn prev" data-pet="rex"><i class="fas fa-chevron-left"></i></button>
                        <div class="slider-dots">
                            <span class="dot active" data-slide="0"></span>
                            <span class="dot" data-slide="1"></span>
                            <span class="dot" data-slide="2"></span>
                        </div>
                        <button class="slider-btn next" data-pet="rex"><i class="fas fa-chevron-right"></i></button>
                    </div>
                    <div class="pet-overlay">
                        <div class="pet-actions">
                            <button class="action-btn favorite" title="Favoritar">
                                <i class="fas fa-heart"></i>
                            </button>
                            <button class="action-btn share" title="Compartilhar">
                                <i class="fas fa-share"></i>
                            </button>
                        </div>
                    </div>
                    <div class="pet-status">
                        <span class="status-badge available">Disponível</span>
                    </div>
                </div>
                <div class="pet-info">
                    <h3 class="pet-name">Rex</h3>
                    <div class="pet-details">
                        <span class="pet-age"><i class="fas fa-calendar"></i> 3 anos</span>
                        <span class="pet-breed"><i class="fas fa-dna"></i> Labrador</span>
                    </div>
                    <p class="pet-description">
                        Cão amigável, adora crianças e brincadeiras. Muito carinhoso e cheio de energia!
                    </p>
                    <div class="pet-traits">
                        <span class="trait">Brincalhão</span>
                        <span class="trait">Carinhoso</span>
                        <span class="trait">Sociável</span>
                    </div>
                    <button class="adopt-btn">
                        <i class="fas fa-heart"></i>
                        Adotar Rex
                    </button>
                </div>
            </div>

            <div class="pet-card" data-pet="luna">
                <div class="pet-image-container">
                    <img src="/img/e7a3bdaa-b32d-4883-909f-f8abbf77d554.jpg" alt="Luna" loading="lazy">
                    <div class="pet-overlay">
                        <div class="pet-actions">
                            <button class="action-btn favorite" title="Favoritar">
                                <i class="fas fa-heart"></i>
                            </button>
                            <button class="action-btn share" title="Compartilhar">
                                <i class="fas fa-share"></i>
                            </button>
                        </div>
                    </div>
                    <div class="pet-status">
                        <span class="status-badge available">Disponível</span>
                    </div>
                </div>
                <div class="pet-info">
                    <h3 class="pet-name">Luna</h3>
                    <div class="pet-details">
                        <span class="pet-age"><i class="fas fa-calendar"></i> 2 anos</span>
                        <span class="pet-breed"><i class="fas fa-dna"></i> Siamês</span>
                    </div>
                    <p class="pet-description">
                        Gata carinhosa, ideal para um lar tranquilo e cheio de amor. Adora carinho!
                    </p>
                    <div class="pet-traits">
                        <span class="trait">Carinhosa</span>
                        <span class="trait">Tranquila</span>
                        <span class="trait">Afetuosa</span>
                    </div>
                    <button class="adopt-btn">
                        <i class="fas fa-heart"></i>
                        Adotar Luna
                    </button>
                </div>
            </div>

            <div class="pet-card" data-pet="mel">
                <div class="pet-image-container">
                    <img src="/img/adocao-de-cachorro-filhote-1200x795.webp" alt="Mel" loading="lazy">
                    <div class="pet-overlay">
                        <div class="pet-actions">
                            <button class="action-btn favorite" title="Favoritar">
                                <i class="fas fa-heart"></i>
                            </button>
                            <button class="action-btn share" title="Compartilhar">
                                <i class="fas fa-share"></i>
                            </button>
                        </div>
                    </div>
                    <div class="pet-status">
                        <span class="status-badge available">Disponível</span>
                    </div>
                </div>
                <div class="pet-info">
                    <h3 class="pet-name">Mel</h3>
                    <div class="pet-details">
                        <span class="pet-age"><i class="fas fa-calendar"></i> 8 meses</span>
                        <span class="pet-breed"><i class="fas fa-dna"></i> SRD</span>
                    </div>
                    <p class="pet-description">
                        Cachorrinha pequena e muito ativa. Ama correr e fazer novos amigos!
                    </p>
                    <div class="pet-traits">
                        <span class="trait">Ativa</span>
                        <span class="trait">Brincalhona</span>
                        <span class="trait">Sociável</span>
                    </div>
                    <button class="adopt-btn">
                        <i class="fas fa-heart"></i>
                        Adotar Mel
                    </button>
                </div>
            </div>

            <div class="pet-card" data-pet="bella">
                <div class="pet-image-container">
                    <img src="/img/c5d9ea77-de0a-41e6-b052-f5d29ba8f790.jpg" alt="Bella" loading="lazy">
                    <div class="pet-overlay">
                        <div class="pet-actions">
                            <button class="action-btn favorite" title="Favoritar">
                                <i class="fas fa-heart"></i>
                            </button>
                            <button class="action-btn share" title="Compartilhar">
                                <i class="fas fa-share"></i>
                            </button>
                        </div>
                    </div>
                    <div class="pet-status">
                        <span class="status-badge available">Disponível</span>
                    </div>
                </div>
                <div class="pet-info">
                    <h3 class="pet-name">Bella</h3>
                    <div class="pet-details">
                        <span class="pet-age"><i class="fas fa-calendar"></i> 1 ano</span>
                        <span class="pet-breed"><i class="fas fa-dna"></i> Persa</span>
                    </div>
                    <p class="pet-description">
                        Gata de pelo longo e super carinhosa, precisa de um lar aconchegante.
                    </p>
                    <div class="pet-traits">
                        <span class="trait">Carinhosa</span>
                        <span class="trait">Calma</span>
                        <span class="trait">Independente</span>
                    </div>
                    <button class="adopt-btn">
                        <i class="fas fa-heart"></i>
                        Adotar Bella
                    </button>
                </div>
            </div>
        </div>
        <div class="section-footer">
            <a class="view-more-btn" href="#contato">
                <span>Não encontrou o pet ideal?</span>
                <i class="fas fa-envelope"></i>
            </a>
        </div>
    </div>
</section>
</main>
<!-- Modal Detalhes do Pet -->
<div id="modalPet" class="modal">
    <div class="modal-content">
        <span class="fechar">&times;</span>
        <img id="modalImagem" src="" alt="">
        <h3 id="modalNome"></h3>
        <p id="modalDescricao"></p>
        <button id="contatoBtn">Quero Adotar!</button>
    </div>
</div>
<script>document.getElementById('current-page').textContent = 'Pets';</script>