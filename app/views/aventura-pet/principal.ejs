<main>
     <div class="profile-card">
        <div class="profile-image">
            <img src="data:image/png;base64, <%= data[0].img %>"
                alt="Foto de {{nome}}" />
        </div>
        <% console.log(data) %>
        <div class="profile-info">
            <div class="top-info">
                <h2><%= data[0].nome_pet, data[0].idade %></h2>
                <p class="location">📍 <%= data[0].cidade %></p>
            </div>

            

            <div class="caracteristicas">
                <p><strong>Caracteristicas:</strong> <%= data[0].caracteristica %></p>
                <p><strong>Distância:</strong> <%= data[0].distancia %></p>
            </div>
        </div>

        <div class="botoes">
          
            <button id="dislike" class="btn dislike">✖️</button>
         
            <button id="like" class="btn like">💚</button>
            <button id="send" class="btn send">📨</button>
        </div>
    </div>
</main>