<section>
      <%- include('../layout/msg'); -%>
    <% arrPetuser.forEach(pet=>{%>
        <div class="profile-card">
            <div class="profile-image">
                <img src="data:image/png;base64, <%= pet.img %>"  />
            </div>
            <% //console.log(data) %>
                <div class="profile-info">
                    <div class="top-info">
                        <h2>
                            <%= pet.nome_pet, pet.idade %>
                        </h2>
                        
                    </div>



                    <div class="caracteristicas">
                        <p><strong>Caracteristicas:</strong>
                            <%= pet.caracteristica %>
                        </p>
                        
                    </div>
                </div>

                <div class="botoes">
                    <%if(pet.disponivel){%>
                        <p style="color: black;">confirmar adoção</p>
                        <a href="/aventura-pet/mark?idUserPet=<%= pet.id_user_pet %>" id="dislike"
                        class="btn dislike">✖️</a>
                    <%}else{%>
                        <p>Pet marcado como adotado</p>
                    <%}%>
                    
                </div>
        </div>
        <% }) %>

</section>
